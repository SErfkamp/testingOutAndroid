<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary"
    tools:context=".IVISActivity">

    <ImageView
        android:id="@+id/activeMenu"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignRight="@+id/lowerBlock"
        android:layout_below="@id/upperBlock"
        android:background="#707070" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewServiceName"
        android:layout_width="100dp"
        android:layout_marginLeft="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/MainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/animationHelper"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="480dp"
            android:background="#707070" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#707070"
            android:layout_gravity="center"
            android:fadingEdge="horizontal"></android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewSecond"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#707070"
            android:layout_gravity="center"
            android:fadingEdge="horizontal">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewThird"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#707070"
            android:layout_gravity="center"

            android:fadingEdge="horizontal"></android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewFour"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#707070"
            android:layout_gravity="center"

            android:fadingEdge="horizontal"></android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewFive"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#707070"
            android:layout_gravity="center"

            android:fadingEdge="horizontal"></android.support.v7.widget.RecyclerView>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewValue"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:background="#00707070"
        android:fadingEdge="horizontal"
        android:layout_alignTop="@id/activeMenu"
        android:alpha="0">

    </android.support.v7.widget.RecyclerView>


    <ImageView
        android:id="@+id/upperBlock"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/black" />


    <ImageView
        android:id="@+id/leftFuzzy"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@id/upperBlock"
        android:layout_below="@id/upperBlock"
        android:background="#CC707070" />

    <ImageView
        android:id="@+id/rightFuzzy"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:layout_alignRight="@+id/lowerBlock"
        android:layout_below="@id/upperBlock"
        android:background="#CC707070" />

    <ImageView
        android:id="@+id/lowerBlock"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/activeMenu"
        android:layout_marginBottom="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black" />

    <ImageView
        android:id="@+id/activeItem"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignTop="@id/activeMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_small" />

    <ImageView
        android:id="@+id/confirm"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/upperBlock"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:alpha="0"
        android:background="@drawable/confirm" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@id/lowerBlock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:alpha="0"
        android:background="@drawable/back" />

    <ImageView
        android:id="@+id/select"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/upperBlock"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:alpha="0"
        android:background="@drawable/select" />

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@id/lowerBlock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:alpha="0"
        android:background="@drawable/back_red" />

    <TextView
        android:id="@+id/serviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="-10dp"
        android:layout_alignTop="@id/activeMenu"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/paramName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_alignBottom="@id/activeMenu"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:visibility="invisible"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/lockingBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/locking_border" />

</RelativeLayout>