<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp">

            <Button
                android:id="@+id/bBaseline"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="#707070"
                android:onClick="startBaseline"
                android:text="Base"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/bRegularLockings"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="#707070"
                android:onClick="startRegularLockings"
                android:text="Regular"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/bInteractionLockings"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="#707070"
                android:onClick="startInteractionLockings"
                android:text="Interaction"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/bTimeInteractionLockings"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="#707070"
                android:onClick="startTimeInteractionLockings"
                android:text="Time Interaction"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/bSmartLockings"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="#707070"
                android:onClick="startSmartLockings"
                android:text="Smart"
                android:textColor="#FFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Locking Duration"
                android:textSize="20dp"
                android:textColor="#FFF"/>

            <EditText
                android:id="@+id/input_locking_duration"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="number"
                android:textColor="#FFF"
                android:text="1000"
                android:textAlignment="center"
                android:background="#707070"/>


            <TextView
                android:id="@+id/lLockingAfter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Locking after (ms)"
                android:textSize="20dp"
                android:textColor="#FFF"/>

            <EditText
                android:id="@+id/input_locking_after"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="number"
                android:text="1500"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:background="#707070"/>


            <TextView
                android:id="@+id/lActionsForLocking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Actions for Locking"
                android:textSize="20dp"
                android:textColor="#FFF"/>

            <EditText
                android:id="@+id/input_actions"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="number"
                android:text="3"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:background="#707070"/>

            <TextView
                android:id="@+id/lResetAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Reset input number after (ms)"
                android:textSize="20dp"
                android:textColor="#FFF"/>

            <EditText
                android:id="@+id/input_reset_action"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="number"
                android:text="1000"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:background="#707070"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>